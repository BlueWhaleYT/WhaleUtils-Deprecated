<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Application">

        <ListPreference
            android:defaultValue="3"
            android:dialogTitle="Choose theme"
            android:entries="@array/theme"
            android:entryValues="@array/theme_value"
            app:useSimpleSummaryProvider="true"
            app:key="app_theme"
            app:title="Theme"
            app:icon="@drawable/ic_outline_brightness_4_24" />

        <SwitchPreferenceCompat
            app:title="Dynamic color"
            app:summary="Android 12 or higher only"
            app:key="app_dynamic_color_enable"
            app:icon="@drawable/ic_outline_color_lens_24"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>